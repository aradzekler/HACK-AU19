<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/layout_progress_bar"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:id="@+id/layout_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/close_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_task_close" />

        <ProgressBar
            android:id="@+id/task_progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/close_task" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/layout_progress_bar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="42dp"
        android:background="@color/blue_background"
        android:padding="12dp">

        <TextView
            android:id="@+id/translate_this_sentence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Translate this sentence"
            android:textColor="#303030"
            android:textSize="26sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="133dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="97dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:text="Ella come manzanas"
            android:textColobutton2r="#303030"
            android:textSize="18sp" />
    </LinearLayout>
    <!-- Top pictures layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="293dp"
        android:orientation="horizontal">
        <!-- Top Left image -->
        <ImageView
            android:id="@+id/Im1"
            android:layout_width="158dp"
            android:layout_height="181dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/hello" />
        <!-- Top right image -->
        <ImageView
            android:id="@+id/im2"
            android:layout_width="158dp"
            android:layout_height="181dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/hello" />

    </LinearLayout>
    <!-- Top buttons layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="419dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <!-- Top right button -->
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />
        <!-- Top left button -->
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />

    </LinearLayout>
    <!-- Bottom images layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="234dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="489dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <!-- Bottom left image -->
        <ImageView
            android:id="@+id/im3"
            android:layout_width="158dp"
            android:layout_height="181dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/hello" />
        <!-- Bottom right image -->
        <ImageView
            android:id="@+id/im4"
            android:layout_width="158dp"
            android:layout_height="181dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/hello" />

    </LinearLayout>
    <!-- Bottom buttons layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="632dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <!-- Bottom left button -->
        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />
        <!-- Bottom right button -->
        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />

    </LinearLayout>

</RelativeLayout>